extends layout

block content

  h1 #{title}
  if user
    form(method='POST')
        div.form-group
            label(for='title') Message Title:
            input#title.form-control(type='text', placeholder='Enter message title' name='title' required)
        div.form-group
            label(for='text') Message Text:
            input#text.form-control(type='text', placeholder='Enter message text' name='text' required)
        button.btn.btn-primary(type='submit') Submit
  if errors
    ul
      for error in errors
        li!= error.msg