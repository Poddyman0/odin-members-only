extends layout

block content
  h1= title

  if messages_list.length
    each message in messages_list
      div
        p #{message.title}
        p #[strong Message:] #{message.text}
        if user.membershipStatus
          p #[strong Timestamp:] #{message.timestamp_formatted}
          p #[strong Created By:] #{message.fullName}
        if user.adminStatus
          a(href=`${message.url}/delete`) Delete Message

  else
    p There are no messages.
